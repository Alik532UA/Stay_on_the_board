{
  "name": "mindstep",
  "description": "A multi-game platform with 'Survive', 'Arena', and 'Maze' modes.",
  "private": true,
  "version": "0.5.611",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:report": "vitest run --reporter=json --outputFile=test-reports/test-results.json",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "diagnose": "node scripts/diagnose.js"
  },
  "devDependencies": {
    "@neoconfetti/svelte": "^2.0.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.25.2",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@types/node": "^24.1.0",
    "gh-pages": "^6.1.1",
    "husky": "^9.1.7",
    "knip": "^5.62.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "svelte": "^5.0.0-next.1",
    "svelte-check": "^4.3.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.5",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "firebase": "^12.6.0",
    "lucide-svelte": "^0.562.0",
    "svelte-i18n": "^4.0.0",
    "uuid": "^13.0.0"
  }
}
