{
  "name": "stay-on-the-board-css",
  "version": "1.0.0",
  "description": "Модульна CSS архітектура для гри Stay on the Board",
  "main": "main.css",
  "scripts": {
    "build": "node build.js build",
    "minify": "node build.js minify",
    "validate": "node build.js validate",
    "watch": "node build.js watch",
    "dev": "npm run build && npm run watch",
    "lint": "stylelint \"**/*.css\"",
    "lint:fix": "stylelint \"**/*.css\" --fix",
    "stats": "cssstats bundle.css",
    "clean": "rm -f bundle.css bundle.min.css"
  },
  "keywords": [
    "css",
    "modular",
    "architecture",
    "game",
    "stay-on-the-board"
  ],
  "author": "Stay on the Board Team",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
